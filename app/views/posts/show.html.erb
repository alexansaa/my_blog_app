
<head>
  <%= stylesheet_link_tag "post_show" %>
</head>
<body>
  <div>
    <%= render partial: 'posts/post', locals: { post: @post, index: @post.id } %>
  </div>
  <%= render partial: 'comments/comment', locals: { comments: @comments } %>
  <div class="new_comment">
    <%= link_to 'New Comment', new_user_post_comment_path(ApplicationController.current_user, @post) %>
  </div>
</body>
