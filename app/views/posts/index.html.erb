<%= render partial: 'users/user', locals: { user: @user } %>
<% @posts.each do |post| %>
  <%= render partial: 'posts/post', locals: { post: post } %>
  <% @comments = post.comments %>
  <% @comments.each do |comment| %>
    <%= render partial: 'comments/comment', locals: { comment: comment } %>
  <% end %>
<% end %>
