<head>
</head>
<body>
  <div>
    <%= render partial: 'users/user', locals: { user: @user } %>
  </div>
  <div>
    <% @posts.each_with_index do |post, index| %>
      <%= render partial: 'posts/post', locals: { post: post, index: post.id } %>
      <% @comments = post.most_recent_comments %>
      <% if @comments.any? %>
        <%= render partial: 'comments/comment', locals: { comments: @comments } %>
      <% end %>
    <% end %>
  </div>
  <div class="btn">
    <button type="button">Pagination</button>
  </div>
</body>
